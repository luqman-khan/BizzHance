<p id="notice"><%= notice %></p>

<h1>Repairs</h1>

<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Problem description</th>
      <th>Item condition</th>
      <th>Repair description</th>
      <th>Charge note</th>
      <th>Data saving</th>
      <th>Total charge</th>
      <th>User</th>
      <th>Customer</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <td><%= repair.item_name %></td>
        <td><%= repair.problem_description %></td>
        <td><%= repair.item_condition %></td>
        <td><%= repair.repair_description %></td>
        <td><%= repair.charge_note %></td>
        <td><%= repair.data_saving %></td>
        <td><%= repair.total_charge %></td>
        <td><%= repair.user %></td>
        <td><%= repair.customer %></td>
        <td><%= repair.organization %></td>
        <td><%= link_to 'Show', repair %></td>
        <td><%= link_to 'Edit', edit_repair_path(repair) %></td>
        <td><%= link_to 'Destroy', repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

