<p id="notice"><%= notice %></p>

<h1>Attendances</h1>

<table class="dtt table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Check in</th>
      <th>Check out</th>
      <th>Datetime</th>
      <th>Hourly pay</th>
      <th>Decimal</th>
      <th>Total pay</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.date %></td>
        <td><%= attendance.check_in %></td>
        <td><%= attendance.check_out %></td>
        <td><%= attendance.datetime %></td>
        <td><%= attendance.hourly_pay %></td>
        <td><%= attendance.decimal %></td>
        <td><%= attendance.total_pay %></td>
        <td><%= attendance.user %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

