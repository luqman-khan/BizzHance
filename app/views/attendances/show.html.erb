<p id="notice"><%= notice %></p>

<h1>
  <%="#{current_user.name.capitalize}'s Attendances"%>
</h1>
<p>
  <strong>Date:</strong>
  <%= @attendance.date %>
</p>

<p>
  <strong>Check in:</strong>
  <%= to_date_time(@attendance.check_in) %>
</p>

<p>
  <strong>Check out:</strong>
  <%= to_date_time(@attendance.check_out)%>
</p>

<p>
  <strong>Hourly pay:</strong>
  <%= @attendance.hourly_pay %>
</p>

<p>
  <strong>Total pay:</strong>
  <%= @attendance.total_pay %>
</p>

<p>
  <strong>User:</strong>
  <%= @attendance.user.name %>
</p>

<%= link_to 'Edit', edit_user_attendance_path(current_user, @attendance), class: "btn btn-success" %> 
<%= link_to 'Back', user_attendances_path(current_user), class: "btn btn-primary"  %>
